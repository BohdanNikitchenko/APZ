@model TechnicTypeModel
@{
    ViewData["Title"] = "AddTechnicTypePage";
}

<h1>AddTechnicTypePage</h1>
<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">@Localizer["Add technic type"]</div>
                    <div class="card-body">
                        <form asp-action="AddTechnicTypePage" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Type" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="Type" class="form-control" />
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Classification" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="Classification" class="form-control" />
                                    <span asp-validation-for="Classification" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="SizeFine" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="SizeFine" class="form-control" />
                                    <span asp-validation-for="SizeFine" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="form-group row">
                                    <label asp-for="PlaceTypeId" class="col-md-4 col-form-label text-md-right"></label>
                                    <div class="col-md-6">
                                        <select asp-for="PlaceTypeId" class="form-control input__item" asp-items="@Model.CityList"></select>
                                    </div>
                                </div>*@
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    @SharedLocalizer["Save"]
                                </button>
                            </div>
                        </form>
                        <div>
                            <a href="@Url.Action("ViewAllPlaceType","Admin")">@SharedLocalizer["Back"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
