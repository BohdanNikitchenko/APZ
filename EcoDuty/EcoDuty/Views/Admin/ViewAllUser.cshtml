@model IEnumerable<User>
@{
    ViewData["Title"] = "ViewAllUser";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>

<h1>ViewAllUser</h1>

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">@Localizer["Users"]</h3>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>
                                        <th style="width: 20%"><em class="fa fa-cog"></em></th>
                                        <th>Passport</th>
                                        <th>Surname</th>
                                        <th>Name</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td align="center">
                                                <a href='@Url.Action("UserPage","Admin", new{id = user.Id})' class="btn btn-default"><em class="fa fa-pencil"></em></a>
                                                <a href='@Url.Action("UserRemove","Admin",new{id = user.Id})' class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                            </td>
                                            <td>@user.Passport</td>
                                            <td>@user.Surname</td>
                                            <td>@user.Name</td>
                                            <td>@user.Role</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

