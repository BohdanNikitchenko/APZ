@model IEnumerable<TechnicType>
@{
    ViewData["Title"] = "ViewAllTechnicType";
}

<h1>ViewAllTechnicType</h1>
<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">@Localizer["Technics"]</h3>
                                </div>
                                <div class="col col-xs-6 text-right">
                                    <button type="button" class="btn btn-sm btn-primary btn-create"
                                            onclick="location.href='@Url.Action("AddTechnicTypePage","Admin")'">
                                        @Localizer["Create New"]
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>
                                        <th style="width: 20%"><em class="fa fa-cog"></em></th>
                                        <th>@SharedLocalizer["TechnicType"]</th>
                                        <th>@SharedLocalizer["Class of technic"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var technicType in Model)
                                    {
                                        <tr>
                                            <td align="center">
                                                <a href='@Url.Action("TechnicTypePage","Admin", new{id = technicType.Id})' class="btn btn-default"><em class="fa fa-pencil"></em></a>
                                                <a href='@Url.Action("TechnicTypeRemove","Admin",new{id = technicType.Id})' class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                            </td>
                                            <td>@technicType.Type </td>
                                            <td>@technicType.Classification</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
<br />
<a href='@Url.Action("AddTechnicTypePage","Admin")' class="link__dish">Add Technic Type</a>
<br />
@foreach (var technicType in Model)
{
    <div>
        <a href='@Url.Action("TechnicTypePage","Admin", new{id = technicType.Id})' class="link__dish">@technicType.Type @technicType.Classification</a>
        <a href='@Url.Action("TechnicTypeRemove","Admin",new{id = technicType.Id})' class="link__dish">Delete</a>
    </div>
}

<a href='@Url.Action("Index","Admin")' class="back__list">Back</a>