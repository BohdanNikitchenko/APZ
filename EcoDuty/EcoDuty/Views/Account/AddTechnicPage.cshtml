@model AddTechnicModel
@{
    ViewData["Title"] = "AddTechnicPage";
}

<h1>AddTechnicPage</h1>

<form asp-action="AddTechnicPage" method="post" enctype="multipart/form-data">


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <label asp-for="AutoNumber" class="control-label name__input"></label>
    <div class="valid">
        <input asp-for="AutoNumber" class="form-control input__item" />
        <span asp-validation-for="AutoNumber" class="text-danger exit__errore field-validation-error"></span>
    </div>

    <label asp-for="YearOfCarManufacture" class="control-label name__input"></label>
    <div class="valid">
        <input asp-for="YearOfCarManufacture" class="form-control input__item" />
        <span asp-validation-for="YearOfCarManufacture" class="text-danger exit__errore field-validation-error"></span>
    </div>

    <label asp-for="EngineVolume" class="control-label name__input"></label>
    <div class="valid">
        <input asp-for="EngineVolume" class="form-control input__item" />
        <span asp-validation-for="EngineVolume" class="text-danger exit__errore field-validation-error"></span>
    </div>


    <div class="form-group">
        <label asp-for="TechnicTypeId" class="control-label name__input">Категория: </label>
        <div class="valid">
            <select asp-for="TechnicTypeId" class="form-control input__item" asp-items="@Model.TechnicTypeList"></select>
        </div>
    </div>


    <input type="submit" id="SaveBtn" value="SaveChange" class="nav__button" />

</form>

<a href='@Url.Action("ViewAllTechnic","Account")' class="back__list">Back to List</a>