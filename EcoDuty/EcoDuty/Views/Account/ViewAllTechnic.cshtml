@model IEnumerable<Technic>
@{
    ViewData["Title"] = "ViewAllTechnic";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<h1>ViewAllTechnic</h1>

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">@SharedLocalizer["Technics"]</h3>
                                </div>
                                <div class="col col-xs-6 text-right">
                                    <button type="button" class="btn btn-sm btn-primary btn-create"
                                            onclick="location.href='@Url.Action("AddTechnicPage","Account")'">
                                        @SharedLocalizer["Create New"]
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list" id="dev-table">
                                <thead>
                                    <tr>
                                        <th style="width: 20%"><em class="fa fa-cog"></em></th>
                                        <th>@SharedLocalizer["TechnicNumber"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var technic in Model)
                                    {
                                        if (technic.AutoNumber != null)
                                        {
                                            <tr>
                                                <td align="center">
                                                    <a href='@Url.Action("TechnicPage","Account", new{id = technic.Id})' class="btn btn-default"><em class="fa fa-info"></em></a>
                                                    <a href='@Url.Action("TechnicRemove","Account",new{id = technic.Id})' class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                                </td>
                                                <td>@technic.AutoNumber</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <div>
                                <a href="@Url.Action("Account","Account")">@SharedLocalizer["Back"]</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

