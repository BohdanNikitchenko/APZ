@model UserChangeModel
@{
    ViewData["Title"] = "ChangeUserData";
}

<h1>ChangeUserData</h1>
<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">@SharedLocalizer["Edit profile"]</div>
                    <div class="card-body">
                        <form asp-action="ChangeUserData" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="number" hidden asp-for="Id" />
                            <div class="form-group row">
                                <label asp-for="Surname" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="Surname" class="form-control" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="City" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <select asp-for="City" class="form-control input__item" asp-items="@new SelectList(Model.Cities)"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    @SharedLocalizer["Save"]
                                </button>
                            </div>
                        </form>
                        <div>
                            <a href="@Url.Action("Account","Account")">@SharedLocalizer["Back"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
