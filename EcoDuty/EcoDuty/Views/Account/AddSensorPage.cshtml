@model AddSensorModel
@{
    ViewData["Title"] = "AddSensorPage";
}

<h1>AddSensorPage</h1>

<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">@SharedLocalizer["Add place"]</div>
                    <div class="card-body">
                        <form asp-action="AddSensorPage" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="SerialNumber" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <input asp-for="SerialNumber" class="form-control" />
                                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="SensorTypeId" class="col-md-4 col-form-label text-md-right"></label>
                                <div class="col-md-6">
                                    <select asp-for="SensorTypeId" class="form-control input__item" asp-items="@Model.SensorTypeList"></select>
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    @SharedLocalizer["Save"]
                                </button>
                            </div>
                        </form>
                        <div>
                            <a href="@Url.Action("ViewAllSensor","Account")">@SharedLocalizer["Back"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


