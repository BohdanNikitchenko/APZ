@model IEnumerable<Place>
@{
    ViewData["Title"] = "GeneralizePlaceFine";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<h1>GeneralizePlaceFine</h1>


<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col col-xs-6">
                                    <h3 class="panel-title">@Localizer["PlacesFine"]</h3>
                                </div>

                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                    <tr>
                                        <th style="width: 20%"><em class="fa fa-cog"></em></th>
                                        <th>@SharedLocalizer["Address"]</th>
                                        <th>@SharedLocalizer["SizeFine"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var place in Model)
                                        {
                                            if (place.Address != null)
                                            {
                                                <tr>
                                                    <td align="center">
                                                        <a href='@Url.Action("PlacePage","Account", new{id = place.Id})' class="btn btn-default"><em class="fa fa-info"></em></a>
                                                    </td>
                                                    <td>@place.Address</td>
                                                    <td>@place.SizeFine</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td align="center">
                                                        <a href='@Url.Action("PlacePage","Account", new{id = place.Id})' class="btn btn-default"><em class="fa fa-info"></em></a>
                                                    </td>
                                                    <td>@SharedLocalizer["PlaceNull"]</td>
                                                    <td>@place.SizeFine</td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                            <div>
                                <a href="@Url.Action("Account","Account")">@SharedLocalizer["Back"]</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>





